# --- Status bar ---
pkill waybar 
waybar &
# --- Basic Keybindings seperti AwesomeWM ---
# Buka terminal (Super+Enter)
riverctl map normal Super Return spawn alacritty
#Buka firefox 
riverctl map normal Super P spawn "wofi --show drun"
#Tutup aplikasi
riverctl map normal Super C close
# Keluar dari River (Super+Shift+Q)
riverctl map normal Super+Shift Q exit
# Restart skrip init (Super+Ctrl+R)
riverctl map normal Super+Control R spawn "sh ~/.config/river/init"
# Workspace / tags 1â€“9
for i in $(seq 1 5); do
    riverctl map normal Super $i set-focused-tags $((1 << ($i - 1)))
    riverctl map normal Super+Shift $i set-view-tags $((1 << ($i - 1)))
done

#next and previous tags 
#using module : 
#git clone https://github.com/NickHastings/riverwm-utils.git
#command to build on freebsd : CFLAGS="-I/usr/local/include" LDFLAGS="-L/usr/local/lib" python3 -m pip install ./riverwm-utils
riverctl map normal Super period spawn "cycle-focused-tags +1 5"
riverctl map normal Super comma spawn "cycle-focused-tags -1 5"

# --- Window management ---
# Fokus ke jendela di arah tertentu
riverctl map normal Super J focus-view previous
riverctl map normal Super K focus-view next

# Mod+H and Mod+L to decrease/increase the main ratio of rivercarro
riverctl map normal Super H send-layout-cmd rivercarro "main-ratio -0.05"
riverctl map normal Super L send-layout-cmd rivercarro "main-ratio +0.05"

# Mod+Shift+H and Mod+Shift+L to increment/decrement the main count of rivercarro
riverctl map normal Super+Shift H send-layout-cmd rivercarro "main-count +1"
riverctl map normal Super+Shift L send-layout-cmd rivercarro "main-count -1"

# Mod+{Up,Right,Down,Left} to change layout orientation
riverctl map normal Super Up    send-layout-cmd rivercarro "main-location top"
riverctl map normal Super Right send-layout-cmd rivercarro "main-location right"
riverctl map normal Super Down  send-layout-cmd rivercarro "main-location bottom"
riverctl map normal Super Left  send-layout-cmd rivercarro "main-location left"
# And for monocle
riverctl map normal Super M send-layout-cmd rivercarro "main-location monocle"
# Cycle through layout
riverctl map normal Super Space     send-layout-cmd rivercarro "main-location-cycle left,monocle"

# Add others rivercarro's commands the same way with the keybinds you'd like.
# e.g.
 riverctl map normal Super I send-layout-cmd rivercarro "outer-gaps -2"
 riverctl map normal Super O send-layout-cmd rivercarro "outer-gaps +2"
# riverctl map normal Super <keys> send-layout-cmd rivercarro "inner-gaps -1"
# riverctl map normal Super <keys> send-layout-cmd rivercarro "inner-gaps +1"
# Set the default layout generator to be rivercarro and start it.
# River will send the process group of the init executable SIGTERM on exit.
riverctl default-layout rivercarro
riverctl rule-add ssd &
riverctl border-color-focused 0xea999c &
rivercarro -outer-gaps 0 -per-tag -no-smart-gaps &
# --- Wallpaper ---
swaybg -i ~/Downloads/20875313_6389081.jpg
